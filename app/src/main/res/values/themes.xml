<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KumaEvolveApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kuma_red</item>
        <item name="colorPrimaryVariant">@color/kuma_black</item>
        <item name="colorOnPrimary">@color/kuma_white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kuma_gold</item>
        <item name="colorSecondaryVariant">@color/kuma_gold_light</item>
        <item name="colorOnSecondary">@color/kuma_black</item>

        <!-- UI Elements -->
        <item name="android:statusBarColor">@color/kuma_black</item>
        <item name="android:windowBackground">@color/kuma_white</item>
        <item name="android:navigationBarColor">@color/kuma_black</item>
    </style>

    <style name="CircularShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>
</resources>
