<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark Mode. -->
    <style name="Theme.KumaEvolveApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kuma_red</item>
        <item name="colorPrimaryVariant">@color/kuma_black</item>
        <item name="colorOnPrimary">@color/kuma_white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kuma_gold</item>
        <item name="colorSecondaryVariant">@color/kuma_gold_light</item>
        <item name="colorOnSecondary">@color/kuma_black</item>

        <!-- UI Elements for Dark Mode -->
        <item name="android:statusBarColor">@color/kuma_black</item>
        <item name="android:windowBackground">@color/kuma_black</item>
        <item name="android:navigationBarColor">@color/kuma_black</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/kuma_white</item>
        <item name="android:textColorPrimary">@color/kuma_white</item>
        <item name="android:textColorSecondary">@color/kuma_gold</item>
    </style>
</resources>
