<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Photo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_attendance_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="#1F1F1F"
            app:shapeAppearanceOverlay="@style/CircularShapeAppearance"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="1dp" />

        <!-- Info Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Number & Name -->
            <TextView
                android:id="@+id/tv_attendance_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Artavia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <!-- Time & Mode -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_attendance_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:15 AM"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tv_attendance_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ ðŸ¤– Facial"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Visitor Badge (if applicable) -->
            <TextView
                android:id="@+id/tv_visitor_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš¶ Visitante"
                android:textSize="11sp"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Attendance Number -->
        <TextView
            android:id="@+id/tv_attendance_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
