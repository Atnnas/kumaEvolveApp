<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/kuma_black"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/nav_user_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/kuma_logo"
        android:background="@color/kuma_black"
        android:padding="4dp"
        android:scaleType="centerInside"
        app:strokeWidth="2dp"
        app:strokeColor="@color/kuma_gold"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.KumaEvolve.Circle" />

    <TextView
        android:id="@+id/nav_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="KUMA DOJO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/kuma_gold"
        android:textSize="18sp"
        android:letterSpacing="0.1"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de GestiÃ³n Evolve"
        android:textColor="@color/kuma_white"
        android:textSize="12sp" />

</LinearLayout>
